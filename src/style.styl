.line {
  font-size: 0;
  height: 1.3rem;
  a, span {
    font-size: 1rem;
    display: inline-block;
    position: relative;
  }
  div {
    display: inline-block;
  }
}

.space:before {
  content: 'Â·';
}
.white-space { color: var(--color-white-space); }
.comment { color: var(--color-comment); }
.variable { color: var(--color-variable); }
.expression { color: var(--color-expression); }
.storage-type { color: var(--color-storage-type); }
.symbol { color: var(--color-symbol); }
.keyword { color: var(--color-keyword); }
.type { color: var(--color-type); }
.class { color: var(--color-class); }
.string { color: var(--color-string); }
.string a { color: var(--color-string); }
.constant { color: var(--color-constant); }
.number { color: var(--color-number); }
.collapsed { color: var(--color-collapsed); }

.tab { box-shadow: -1px 0 0 var(--color-white-space); }

.storage-type {
  font-style: italic;
}

.progress {
  display: inline-block;
  position: relative;
  &:before,
  &:after {
    content: '';
    display: block;
    width: 100%;
    height: 2px;
    position: absolute;
    bottom: 0;
    background-color: #abb;
  }
  &:after {
    width: calc(var(--value) * 100%);
    background: red;
    filter: hue-rotate(calc(120deg * var(--value)));
  }
}

.legal,
.skillset,
.stage {
  cursor: n-resize;
  &.collapsed {
    cursor: s-resize;
  }
}

.section {
  .collapsible {
    max-width: 0;
    opacity: 0;
  }
  .selectable {
    &:not(.active) {
      color: var(--color-white-space);
      &:hover {
        color: var(--color-comment);
        cursor: pointer;
        &:before, &:after {
          z-index: 2;
          position: absolute;
          background-color: var(--color-background);
          color: var(--color-expression);
        }
        &:before {
          content: '[';
          transform: translateX(-100%);
        }
        &:after {
          content: ']';
          left: 100%;
        }
      }
    }
  }
  &:hover {
    .collapsible {
      max-width: 100%;
      opacity: 1;
    }
  }
}
